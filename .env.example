# =============================================================================
# TinAdmin SaaS Base - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or any file containing real secrets to version control
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION
# Required for all database operations and authentication
# Get these from your Supabase project: https://supabase.com/dashboard
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Server-side only - keep these secret
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Webhook secret for Supabase database webhooks
SUPABASE_WEBHOOK_SECRET=your-webhook-secret

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# Basic application settings
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME=TinAdmin SaaS
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_SUPPORT_EMAIL=support@example.com

# App URL for authentication redirects
APP_URL=http://localhost:3000

# Node environment (development, production, test)
NODE_ENV=development

# -----------------------------------------------------------------------------
# MULTI-TENANCY CONFIGURATION
# Enable and configure multi-tenant features
# -----------------------------------------------------------------------------
NEXT_PUBLIC_MULTI_TENANT_ENABLED=false
NEXT_PUBLIC_TENANT_RESOLUTION=subdomain
NEXT_PUBLIC_BASE_DOMAIN=localhost:3000

# System mode: 'single' for single-tenant, 'multi' for multi-tenant
NEXT_PUBLIC_SYSTEM_MODE=single

# Routing strategy: 'industry', 'location', 'category'
ROUTING_STRATEGY=industry

# Taxonomy configuration
TAXONOMY_CONFIG=industry
NEXT_PUBLIC_TAXONOMY_CONFIG=industry

# -----------------------------------------------------------------------------
# STRIPE PAYMENT INTEGRATION
# Required for billing and subscription features
# Get these from https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
NEXT_PUBLIC_STRIPE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Enable Stripe Connect for marketplace payments
STRIPE_CONNECT_ENABLED=false

# -----------------------------------------------------------------------------
# OPENAI INTEGRATION
# Required for AI chatbot and embeddings features
# Get your API key from https://platform.openai.com/api-keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...

# Model configuration (optional - defaults provided)
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# TYPESENSE SEARCH
# Optional: Enable for advanced search functionality
# https://typesense.org/
# -----------------------------------------------------------------------------
TYPESENSE_API_KEY=your-typesense-api-key
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_TIMEOUT=5

# -----------------------------------------------------------------------------
# WASABI CLOUD STORAGE / S3-COMPATIBLE
# Required for file uploads and media storage
# https://wasabi.com/ or any S3-compatible service
# -----------------------------------------------------------------------------
WASABI_ACCESS_KEY=your-access-key
WASABI_SECRET_KEY=your-secret-key
WASABI_BUCKET=your-bucket-name
WASABI_REGION=us-east-1
WASABI_ENDPOINT=s3.wasabisys.com

# CDN URL for serving media (optional)
NEXT_PUBLIC_CDN_URL=https://cdn.yourplatform.com

# -----------------------------------------------------------------------------
# MAPS INTEGRATION
# Required for location-based features
# -----------------------------------------------------------------------------
# Mapbox (preferred) - https://www.mapbox.com/
NEXT_PUBLIC_MAPBOX_TOKEN=pk.eyJ1...

# Google Maps (alternative) - https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIza...

# -----------------------------------------------------------------------------
# EMAIL PROVIDER CONFIGURATION
# Required for transactional emails
# Supports: resend, sendgrid
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=resend
EMAIL_FROM_ADDRESS=noreply@example.com

# Resend - https://resend.com/
RESEND_API_KEY=re_...
RESEND_SANDBOX=false

# SendGrid (alternative) - https://sendgrid.com/
SENDGRID_API_KEY=SG...
SENDGRID_SANDBOX=false

# -----------------------------------------------------------------------------
# PUSH NOTIFICATIONS
# Required for real-time push notifications
# Generate VAPID keys: npx web-push generate-vapid-keys
# -----------------------------------------------------------------------------
NEXT_PUBLIC_VAPID_KEY=your-vapid-public-key

# -----------------------------------------------------------------------------
# REAL-TIME / WEBSOCKET
# Required for real-time chat and live updates
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# -----------------------------------------------------------------------------
# API SERVER CONFIGURATION
# Settings for the Express API server
# -----------------------------------------------------------------------------
PORT=4000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Revalidation for Next.js ISR
PORTAL_REVALIDATE_URL=http://localhost:3000/api/revalidate
REVALIDATION_SECRET=your-revalidation-secret

# -----------------------------------------------------------------------------
# VERCEL (Production only)
# Automatically set by Vercel, no need to configure manually
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_VERCEL_URL=your-app.vercel.app

# -----------------------------------------------------------------------------
# DEVELOPMENT / DEBUGGING
# Only for local development
# -----------------------------------------------------------------------------
# GIT_BRANCH=develop
